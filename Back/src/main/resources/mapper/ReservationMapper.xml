<!--room 테이블에서 현재 선택한 숙소에 대해 가격과 청소비 조회	-->
	<select id="selectRoom" resultMap="roomResult">
		SELECT roomIndex, price, clean_price
		FROM room
		WHERE roomIndex = #{roomIndex}
	</select>


	

</mapper>